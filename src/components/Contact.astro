<section
  id="contact"
  class="max-w-2xl bg-[#f0f4f8]/70 backdrop-blur-sm rounded-3xl p-10 shadow-md border border-[#cdd7e1]"
>
  <h2 class="text-3xl font-semibold mb-8 text-[#5a7291]">Contact</h2>
  <form
    action="https://formspree.io/f/mzzgbnal"
    method="POST"
    class="space-y-6"
  >
    <input
      type="text"
      name="name"
      placeholder="Votre nom"
      required
      class="w-full p-4 rounded-lg border border-[#a9b8cc] bg-[#e6edf5] placeholder-[#7d8ca4] focus:outline-none focus:ring-2 focus:ring-[#8fb7ff] transition"
    />
    <input
      type="email"
      name="email"
      placeholder="Votre email"
      required
      class="w-full p-4 rounded-lg border border-[#a9b8cc] bg-[#e6edf5] placeholder-[#7d8ca4] focus:outline-none focus:ring-2 focus:ring-[#8fb7ff] transition"
    />
    <textarea
      name="message"
      placeholder="Votre message"
      required
      class="w-full p-4 rounded-lg border border-[#a9b8cc] bg-[#e6edf5] placeholder-[#7d8ca4] h-36 resize-none focus:outline-none focus:ring-2 focus:ring-[#8fb7ff] transition"
    ></textarea>
    <button
      type="submit"
      class="w-full bg-[#a3bbff] hover:bg-[#8fb7ff] text-[#3a4e78] font-semibold py-4 rounded-xl shadow-md transition duration-200 ease-in-out"
    >
      Envoyer
    </button>
  </form>
</section>